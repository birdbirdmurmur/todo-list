<form action="/todos/{{ todo._id }}?_method=PUT" method="POST" style="display: inline;">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">
                <input class="form-check-input" type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}}>
            </span>
        </div>
        <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}">
        <div class="input-group-append">
            <button class="btn btn-success" type="submit">Save</button>
        </div>
        <input type="hidden" name="_method" value="PUT">
    </div>
</form>